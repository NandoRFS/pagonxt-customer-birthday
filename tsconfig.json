{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "es2021"
    ],
    "target": "es2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}